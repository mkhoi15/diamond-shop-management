@page
@model diamond_shop_management.Pages.AccessoryManagement.AccessoryDetailModel
@{
    ViewData["Title"] = "Accessory Detail";
}

<section class="shop_section layout_padding">
    <div class="container">
        <div class="text-Left mb-3">
            <a asp-page="/AccessoryManagement/ViewAccessory" class="btn btn-secondary">Back to List</a>
        </div>
        <div class="heading_container heading_center">
            <h2>Detail</h2>
        </div>
        <div class="row justify-content-center">
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="box">
                    <div class="img-box">
                        @if (Model.Accessory != null && Model.Accessory.Media != null)
                        {
                            <img src="~/@Model.Accessory.Media.Url" alt="Accessory Image" width="auto">
                        }
                        else
                        {
                            <img src="" alt="No image">
                        }
                    </div>
                    <div class="text-center">
                        <div>Name: @Model.Accessory.Name</div>
                        <div>Price: @Model.Accessory.Price $</div>
                        @if (@Model.Accessory != null && Model.Accessory.Promotion is not null && Model.Accessory.Promotion.EndDate!.Value >= DateTime.Now)
                        {
                            <div>Promotion: @(Model.Accessory.Promotion.DiscountRate * 100) %</div>
                        }
                        else
                        {
                            <div>No Promotion</div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Message))
                        {
                            <div style="color: red" id="error-message">@Model.Message</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
