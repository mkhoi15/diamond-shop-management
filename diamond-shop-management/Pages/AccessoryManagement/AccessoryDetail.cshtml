@page
@model diamond_shop_management.Pages.AccessoryManagement.AccessoryDetailModel
@{
    ViewData["Title"] = "Accessory Details";
}

<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Detail
            </h2>
        </div>
        <div class="row">
            <form>
                <div class="form-group">
                    <label asp-for="Accessory.Name"></label>
                    <input asp-for="Accessory.Name" class="form-control" readonly style="pointer-events:none" />
                </div>
                <div class="form-group">
                    <label asp-for="Accessory.Price"></label>
                    <input asp-for="Accessory.Price" class="form-control" readonly style="pointer-events:none" />
                </div>
                <div class="form-group">
                    <a asp-page="/AccessoryManagement/ViewAccessory" class="btn btn-secondary">Back to List</a>
                </div>
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div style="color: red" id="error-message">@Model.Message</div>
                }
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}