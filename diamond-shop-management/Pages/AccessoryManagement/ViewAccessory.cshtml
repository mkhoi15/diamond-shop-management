@page
@model diamond_shop_management.Pages.AccessoryManagement.ViewAccessoryModel
@{
    ViewData["Title"] = "View Accessory";
}

<div class="text-center">
    <section class="shop_section layout_padding">
        <div class="container">
            <div class="text-right mb-3">
                <a asp-page="/AccessoryManagement/CreateAccessory" class="btn btn-primary">Create New Accessory</a>
            </div>

            <form method="get">
                <div class="row mb-6">
                    <div class="col-md-4">
                        <input type="text" id="nameFilter" class="form-control" placeholder="Name" asp-for="Search" />
                    </div>
                    <div class="col-md-3">
                        <input type="number" id="priceFilter" class="form-control" placeholder="Price" asp-for="SearchPrice" />
                    </div>
                    <div class="col-md-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="promotionFilter" asp-for="ShowOnlyPromotions" />
                            <label class="form-check-label" for="promotionFilter">Only Show Promotions</label>
                        </div>
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-primary ml-2" onclick="filterAccessory()">Search</button>
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-secondary" onclick="clearFilters()">Clear</button>
                    </div>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-danger" id="message" role="alert">
                    @Model.Message
                </div>
            }
            @if (Model.Accessories == null || !Model.Accessories.Any())
            {
                <div class="alert alert-info" role="alert">
                    There are no accessories.
                </div>
            }
            else
            {
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Promotion</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var accessory in Model.Accessories)
                        {
                            <tr>
                                <td>@accessory.Name</td>
                                <td>@accessory.Price $</td>
                                <td>@(accessory.Promotion != null ? (accessory.Promotion.DiscountRate * 100).ToString("0.##") + "%" : "None")</td>
                                <td>
                                    <a asp-page="/AccessoryManagement/AccessoryDetail" asp-route-accessoryId="@accessory.Id" class="btn btn-info btn-sm me-1">Detail</a>
                                    <a asp-page="/AccessoryManagement/UpdateAccessory" asp-route-accessoryId="@accessory.Id" class="btn btn-warning btn-sm me-1">Update</a>
                                    <a asp-page="/AccessoryManagement/DeleteAccessory" asp-route-accessoryId="@accessory.Id" class="btn btn-danger btn-sm me-1">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            <div class="container">
                <nav aria-label="Page navigation" style="margin-top: 2%">
                    <ul class="pagination justify-content-center">
                        @if (Model.PageNumber > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="/AccessoryManagement/ViewAccessory" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-search="@Model.Search" asp-route-searchPrice="@Model.SearchPrice">Previous</a>
                            </li>
                        }
                        <li class="page-item active">
                            <a class="page-link" asp-page="/AccessoryManagement/ViewAccessory" asp-route-pageNumber="@Model.PageNumber">@Model.PageNumber</a>
                        </li>
                        @if (Model.PageNumber < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="/AccessoryManagement/ViewAccessory" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-search="@Model.Search" asp-route-searchPrice="@Model.SearchPrice">Next</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        function filterAccessory() {
            var search = document.getElementById("nameFilter").value;
            var searchPrice = document.getElementById("priceFilter").value;
            var showOnlyPromotions = document.getElementById("promotionFilter").checked;
            var url = '@Url.Page("/AccessoryManagement/ViewAccessory")' + '?Search=' + encodeURIComponent(search) + '&SearchPrice=' + encodeURIComponent(searchPrice) + '&ShowOnlyPromotions=' + showOnlyPromotions;
            window.location.href = url;
        }

        function clearFilters() {
            document.getElementById("nameFilter").value = "";
            document.getElementById("priceFilter").value = "";
            document.getElementById("promotionFilter").checked = false;
            filterAccessory();
        }
    </script>
}