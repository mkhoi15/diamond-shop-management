@page
@model diamond_shop_management.Pages.Admin.Delete

@{
    Layout = "Shared/_Layout";
    ViewBag.Title = "Delete Account";
}

<div class="container mt-5">
    <h1 class="text-center">Delete Account</h1>
    <h3 class="text-center text-danger">Are you sure you want to delete this account?</h3>
    <div class="card mt-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.UserResponse.UserName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UserResponse.UserName)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.UserResponse.FullName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UserResponse.FullName)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.UserResponse.PhoneNumber)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UserResponse.PhoneNumber)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.UserResponse.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UserResponse.Email)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.UserResponse.Role)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UserResponse.Role)
                </dd>
            </dl>
            
            @if (Model.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    @Model.ErrorMessage
                </div>
            }

            <form method="post" onsubmit="return confirmDelete();">
                <input type="hidden" asp-for="UserResponse.Id" />
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-page="./Index" class="btn btn-secondary ml-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        function confirmDelete() {
            return confirm('Are you sure you want to delete this account?');
        }
    </script>
}
