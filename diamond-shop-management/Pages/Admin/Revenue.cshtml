@page
@model diamond_shop_management.Pages.Admin.Revenue

@{
    Layout = "Shared/_Layout";
    ViewBag.Title = "Revenue";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Revenue</h1>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3>Revenue</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th>Month</th>
                                    <th>Revenue</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.RevenueResponses)
                                {
                                    <tr>
                                        <td>@item.Month</td>
                                        <td>@item.TotalRevenue</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>