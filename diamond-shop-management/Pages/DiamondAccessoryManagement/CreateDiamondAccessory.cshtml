@model diamond_shop_management.Pages.DiamondAccessoryManagement.CreateDiamondAccessoryModel
@{
    ViewData["Title"] = "Create DiamondAccessory ";
}

<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Create DiamondAccessory
            </h2>
        </div>
        <div class="row">
            <form method="post" enctype="multipart/form-data">
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert alert-danger" id="message" role="alert">
                        @Model.Message
                    </div>
                }
                <div class="form-group">
                    <label asp-for=" DiamondAccessory.DiamondId "></label>
                    <select asp-for="DiamondAccessory.DiamondId" class="form-control" asp-items="Model.Diamonds"><</select>
                    <span asp-validation-for="DiamondAccessory.DiamondId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiamondAccessory.AccessoryId"></label>
                    <select asp-for="DiamondAccessory.AccessoryId" class="form-control" asp-items="Model.Accessories"></select>
                    <span asp-validation-for="DiamondAccessory.AccessoryId" class="text-danger"></span>
                </div>
                <div class="flex-start">
                    <a asp-page="/DiamondAccessoryManagement/ViewDiamondAccessory" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}