@page "{id}"
@model diamond_shop_management.Pages.DiamondAccessoryManagement.DiamondAccessoryDetailModel
@{
    ViewData["Title"] = "DiamondAccessory Details";
}

<section class="shop_section layout_padding">
    <div class="container">
        <h1 class="text-center">Diamond Accessory Details</h1>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">
                @Model.ErrorMessage
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body">
                    <fieldset class="mb-4">
                        <legend>Diamond Details</legend>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label>Origin</label>
                                <input value="@Model.DiamondAccessory.Origin" class="form-control" readonly />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Color</label>
                                <input value="@Model.DiamondAccessory.Color" class="form-control" readonly />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Cut</label>
                                <input value="@Model.DiamondAccessory.Cut" class="form-control" readonly />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Clarity</label>
                                <input value="@Model.DiamondAccessory.Clarity" class="form-control" readonly />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Weight</label>
                                <input value="@Model.DiamondAccessory.Weight" class="form-control" readonly />
                            </div>
                        </div>
                    </fieldset>

                    <fieldset class="mb-4">
                        <legend>Accessory Details</legend>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label>Accessory Name</label>
                                <input value="@Model.DiamondAccessory.AccessoryName" class="form-control" readonly />
                            </div>
                        </div>
                    </fieldset>

                    <div class="form-group">
                        <a asp-page="/DiamondAccessoryManagement/UpdateDiamondAccessory" asp-route-id="@Model.DiamondAccessory.Id" class="btn btn-primary">Edit</a>
                        <a asp-page="/DiamondAccessoryManagement/DeleteDiamondAccessory" asp-route-id="@Model.DiamondAccessory.Id" class="btn btn-danger">Delete</a>
                        <a asp-page="/DiamondAccessoryManagement/ViewDiamondAccessory" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}