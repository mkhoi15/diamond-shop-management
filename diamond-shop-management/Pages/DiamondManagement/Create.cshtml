<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Create
            </h2>
        </div>
        <div class="row">
            <form method="post">
                <div class="form-group">
                    <label asp-for="DiamondRequest.Origin"></label>
                    <input asp-for="DiamondRequest.Origin" class="form-control" />
                    <span asp-validation-for="DiamondRequest.Origin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiamondRequest.Color"></label>
                    <input asp-for="DiamondRequest.Color" class="form-control" />
                    <span asp-validation-for="DiamondRequest.Color" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiamondRequest.Cut"></label>
                    <input asp-for="DiamondRequest.Cut" class="form-control" />
                    <span asp-validation-for="DiamondRequest.Cut" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiamondRequest.Clarity"></label>
                    <input asp-for="DiamondRequest.Clarity" class="form-control" />
                    <span asp-validation-for="DiamondRequest.Clarity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiamondRequest.Weight"></label>
                    <input asp-for="DiamondRequest.Weight" class="form-control" />
                    <span asp-validation-for="DiamondRequest.Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiamondRequest.Price"></label>
                    <input asp-for="DiamondRequest.Price" class="form-control" />
                    <span asp-validation-for="DiamondRequest.Price" class="text-danger"></span>
                </div>

                @if (!string.IsNullOrEmpty(Model.Message)) {
                    <div class="alert alert-danger" id="message" role="alert">
                        @Model.Message
                    </div>
                }

                <div class="flex-start">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-page="/DiamondManagement/ViewDiamond" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</section>

