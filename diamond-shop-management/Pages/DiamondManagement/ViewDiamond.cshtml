@page
@model diamond_shop_management.Pages.DiamondManagement.ViewDiamondModel
@{
    ViewData["Title"] = "ViewDiamond";
}

<div class="text-center">
    <section class="shop_section layout_padding">
        <div class="container">
            <div class="heading_container heading_center">
                <h2>
                    Latest Products
                </h2>
            </div>
            <div class="text-right mb-3">
                <a asp-page="/DiamondManagement/Create" class="btn btn-primary">Create New Diamond</a>
            </div>
            @if (Model.Diamonds == null || !Model.Diamonds.Any())
            {
                <div class="alert alert-info" role="alert">
                    There are no diamonds.
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var diamond in Model.Diamonds)
                    {
                        <div class="col-sm-6 col-md-4 col-lg-3">
                            <div class="box">
                                <a asp-page="/DiamondManagement/DiamondDetail" asp-route-diamondId="@diamond.Id">
                                    <div class="img-box">
                                        @if (!string.IsNullOrEmpty(diamond.MediaUrl))
                                        {
                                            <img src="@diamond.MediaUrl" alt="Diamond Image">
                                        }
                                        else
                                        {
                                            <img src="/images/Diamond.png" alt="Diamond Image">
                                        }
                                    </div>
                                    <div>
                                        <div>Origin: @diamond.Origin</div>
                                        <div>Color: @diamond.Color</div>
                                        <div>Cut: @diamond.Cut</div>
                                        <div>Clarity: @diamond.Clarity</div>
                                        <div>Weight: @diamond.Weight</div>
                                        <div>Price: $@diamond.Price</div>
                                        <div>Status: @(diamond.IsSold.HasValue && diamond.IsSold.Value ? "Sold" : "Available")</div>
                                        @if (!string.IsNullOrEmpty(diamond.PromotionDescription))
                                        {
                                            <h6>Promotion: @diamond.PromotionDescription</h6>
                                        }
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
            @* <div class="btn-box">
            <a href="">
            View All Products
            </a>
            </div> *@
            <div class="container">

                <nav aria-label="Page navigation" style="margin-top: 2%">
                    <ul class="pagination justify-content-center">
                        @if (Model.PageNumber > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="./ViewDiamond" asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
                            </li>
                        }

                        <li class="page-item active">
                            <a class="page-link" asp-page="./ViewDiamond" asp-route-pageNumber="@Model.PageNumber">@Model.PageNumber</a>
                        </li>

                        @if (Model.PageNumber < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="./ViewDiamond" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </section>

