@page
@model diamond_shop_management.Pages.DiamondShop.BrowseDiamond

@{
    ViewData["Title"] = "BrowseDiamond";
}

<div class="text-center">
    <section class="shop_section layout_padding">
        <div class="container">
            <div class="heading_container heading_center">
                <h2>
                    Browse Diamonds
                </h2>
            </div>
            @if (Model.Diamonds == null || !Model.Diamonds.Any())
            {
                <div class="alert alert-info" role="alert">
                    No diamonds available.
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var diamond in Model.Diamonds)
                    {
                        <div class="col-sm-6 col-md-4 col-lg-3">
                            <div class="box">
                                <div class="img-box">
                                    @if (!string.IsNullOrEmpty(diamond.MediaUrl))
                                    {
                                        <img src="@diamond.MediaUrl" alt="Diamond Image">
                                    }
                                    else
                                    {
                                        <img src="/images/Diamond.png" alt="Diamond Image">
                                    }
                                </div>
                                <div>
                                    <div>Origin: @diamond.Origin</div>
                                    <div>Color: @diamond.Color</div>
                                    <div>Cut: @diamond.Cut</div>
                                    <div>Clarity: @diamond.Clarity</div>
                                    <div>Weight: @diamond.Weight</div>
                                    <div>Price: $@diamond.Price</div>
                                    <div>Status: @(diamond.IsSold.HasValue && diamond.IsSold.Value ? "Sold" : "Available")</div>
                                    @if (!string.IsNullOrEmpty(diamond.PromotionDescription))
                                    {
                                        <h6>Promotion: @diamond.PromotionDescription</h6>
                                    }
                                </div>
                                <form method="post" asp-page-handler="AddToCart">
                                    <input type="hidden" name="diamondId" value="@diamond.Id" />
                                    <button type="submit" class="btn btn-primary" @(diamond.IsSold.HasValue && diamond.IsSold.Value ? "disabled" : "")>Add to Cart</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            }
            <div class="container">
                <nav aria-label="Page navigation" style="margin-top: 2%">
                    <ul class="pagination justify-content-center">
                        @if (Model.PageNumber > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="./BrowseDiamonds" asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
                            </li>
                        }

                        <li class="page-item active">
                            <a class="page-link" asp-page="./BrowseDiamonds" asp-route-pageNumber="@Model.PageNumber">@Model.PageNumber</a>
                        </li>

                        @if (Model.PageNumber < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="./BrowseDiamonds" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </section>
</div>

