@page
@model diamond_shop_management.Pages.Orders.Create

@{
    ViewData["Title"] = "Create Order";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Create Order</h2>


    <form method="post">

        @if (User.IsInRole("Manager"))
        {
            <div class="form-group">
                @* <label for="customerEmail" class="control-label">Search Customer by Email</label> *@
                @* <input type="text" id="customerEmail" class="form-control" placeholder="Enter customer email" /> *@
                @* <button type="button" class="btn btn-primary mt-2" onclick="searchCustomer()">Search</button> *@
                @* <select id="customerSelect" class="form-control mt-2" name="OrderRequest.CustomerId"> *@
                @*     <option value="">Select Customer</option> *@
                @*     @foreach (var customer in Model.Customers) *@
                @*     { *@
                @*         <option value="@customer.Id">@customer.Email</option> *@
                @*     } *@
                @* </select> *@
                <input type="text" id="emailSearch" onkeyup="filterEmails()" placeholder="Search for emails..">
                <select id="emailComboBox" size="10" asp-for="CusId">
                    @foreach (var customer in Model.Customers)
                    {
                        <option value="@customer.Id">@customer.Email</option>
                    }
                </select>

            </div>
        }

        <div class="form-group">
            <label asp-for="OrderRequest.Address" class="control-label"></label>
            <input asp-for="OrderRequest.Address" class="form-control" placeholder="Enter address" required/>
            <span asp-validation-for="OrderRequest.Address" class="text-danger"></span>
        </div>


        <!-- Hidden field for Date -->
        <input type="hidden" asp-for="OrderRequest.Date" value="@Model.OrderRequest.Date.ToString("yyyy-MM-ddTHH:mm:ss")"/>

        <table class="table table-hover mt-4">
            <thead class="thead-light">
            <tr>
                <th scope="col">Description (Origin, Color, Cut, Clarity)</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total</th>
            </tr>
            </thead>
            <tbody>
            @for (var i = 0; i < Model.CartItems.Diamond.Count; i++)
            {
                var item = Model.CartItems.Diamond[i];
                var orderDetail = Model.OrderRequest.OrderDetails[i];
                <tr>
                    <td>
                        <div class="media">
                            @* <img src="@item.MediaUrl ?? '/images/Diamond.png'" class="mr-3 img-thumbnail" alt="Diamond Image" style="max-width: 100px;"> *@
                            <div class="media-body">
                                @* <h5 class="mt-0">@item.Name</h5> *@
                                <p class="mb-1">@item.Origin, @item.Color, @item.Cut, @item.Clarity</p>
                            </div>
                        </div>
                    </td>
                    <td class="align-middle">$@item.Price</td>
                    <td class="align-middle">
                        <input type="hidden" name="OrderRequest.OrderDetails[@i].ProductId" value="@orderDetail.ProductId"/>
                        <input type="hidden" name="OrderRequest.OrderDetails[@i].Price" value="@orderDetail.Price"/>
                        <input type="hidden" name="OrderRequest.OrderDetails[@i].Quantity" value="1"/>
                        1
                    </td>
                    <td class="align-middle">$@(item.Price * 1)</td>
                </tr>
            }
            </tbody>
        </table>

        <div class="form-group mt-4">
            <label class="font-weight-bold">Total Price: $@Model.Total</label>
        </div>

        <!-- Hidden field for TotalPrice -->
        <input type="hidden" asp-for="OrderRequest.TotalPrice"/>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Place Order</button>
        </div>
    </form>

    <form method="post" asp-page-handler="CancelBooking">
        <div class="text-center mt-2">
            <button type="submit" class="btn btn-danger btn-lg">Cancel</button>
        </div>
    </form>

    <div class="text-danger mt-2">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>

</div>

@section Scripts {
    <script>
            function filterEmails() {
                var input, filter, select, option, i;
                input = document.getElementById("emailSearch");
                filter = input.value.toLowerCase();
                select = document.getElementById("emailComboBox");
                option = select.getElementsByTagName("option");
                for (i = 0; i < option.length; i++) {
                    txtValue = option[i].textContent || option[i].innerText;
                    if (txtValue.toLowerCase().indexOf(filter) > -1) {
                        option[i].style.display = "";
                    } else {
                        option[i].style.display = "none";
                    }
                }
            }
        </script>
}