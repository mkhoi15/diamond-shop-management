@page
@model diamond_shop_management.Pages.Orders.Create

@{
    Layout = null;
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Create Order</h2>

    <form method="post">
        <div class="form-group">
            <label asp-for="OrderRequest.Address" class="control-label"></label>
            <input asp-for="OrderRequest.Address" class="form-control" />
            <span asp-validation-for="OrderRequest.Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="OrderRequest.Date" class="control-label"></label>
            <input asp-for="OrderRequest.Date" class="form-control" type="datetime-local" />
            <span asp-validation-for="OrderRequest.Date" class="text-danger"></span>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>Description (Origin, Color, Cut, Clarity)</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.OrderRequest.OrderDetails)
            {
                <tr>
                    <td>
                        <div>@item.ProductId</div> <!-- Use appropriate description fields -->
                    </td>
                    <td>$@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>$@(item.Price * item.Quantity)</td>
                </tr>
            }
            </tbody>
        </table>

        <div class="form-group">
            <label>Total Price: $@Model.OrderRequest.TotalPrice</label>
        </div>

        <button type="submit" class="btn btn-primary">Place Order</button>
    </form>
</div>

