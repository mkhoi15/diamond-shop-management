@page
@model diamond_shop_management.Pages.Orders.OrdersList
@{
    ViewData["Title"] = "Orders List";
}

<style>
    .un-auth {
        margin: 300px;
    }
    
</style>

@if ((User.Identity?.IsAuthenticated ?? false) && User.IsInRole("Manager"))
{
    <div class="container mt-5">
        <h2 class="text-center mb-4">Manage Orders</h2>

        <div class="row mb-3">
            <div class="col-md-4">
                <select id="orderStatusFilter" class="form-control" asp-for="SelectedStatus" asp-items="Model.StatusList">
                    <option value="">All</option>
                </select>
            </div>
            <div class="col-md-4">
                <input type="text" id="searchString" class="form-control" placeholder="Search by customer name or email" asp-for="SearchString" />
                </div>
            <div class="col-md-4">
                <button type="button" class="btn btn-primary" onclick="filterOrders()">Filter</button>
            </div>
        </div>
        
        

        @if (Model.Orders != null && Model.Orders.Any())
        {
            <table class="table table-hover">
                <thead class="thead-light">
                <tr>
                    <th scope="col">Order ID</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Total Price</th>
                    <th scope="col">Status</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.Customer?.FullName</td>
                        <td>@order.Customer?.Email</td>
                        <td>@order.Customer?.PhoneNumber</td>
                        <td>$@order.TotalPrice</td>
                        <td><span class="badge @(GetBadgeClass(order.Status))">@order.Status</span></td>
                        <td>@order.Date</td>
                        <td>
                            <div class="d-flex flex-wrap">
                                <a asp-page="/Orders/OrderDetails" asp-route-id="@order.Id" class="btn btn-info m-1">View Details</a>
                                @if (order.Status == "Pending")
                                {
                                    <a asp-page="/Delivery/CreateDelivery" asp-route-id="@order.Id" class="btn btn-primary m-1">Create Delivery</a>
                                }
                                @if (order.Status == "Shipped")
                                {
                                    <a asp-page="/Orders/OrderDeliveries" asp-route-orderId="@order.Id" class="btn btn-warning m-1">Update Delivery</a>
                                }
                                @if (order.Status != "Cancelled" && order.Status != "Delivered")
                                {
                                    <a asp-page="/Orders/CancelOrder" asp-route-id="@order.Id" class="btn btn-danger m-1">Cancel Order</a>
                                }
                            </div>
                        </td>
                    </tr>
                }

                @functions {
                    string GetBadgeClass(string status)
                    {
                        switch (status)
                        {
                            case "Pending":
                                return "badge-warning";
                            case "Processing":
                                return "badge-info";
                            case "Shipped":
                                return "badge-primary";
                            case "Delivered":
                                return "badge-success";
                            case "Cancelled":
                                return "badge-danger";
                            default:
                                return "badge-secondary";
                        }
                    }
                }

                </tbody>
            </table>
        }
        else
        {
            <p class="text-center">No orders found.</p>
        }
    </div>

    @section Scripts {
   <script>
       function filterOrders() {
           var selectedStatus = document.getElementById("orderStatusFilter").value;
           var searchString = document.getElementById("searchString").value;
           var url = '@Url.Page("/Orders/OrdersList")' + '?SelectedStatus=' + selectedStatus + '&SearchString=' + searchString;
           window.location.href = url;       
       }
          </script>      
    }
}
else
{
    <div class="container un-auth">
        <div class="card">
            <h1 class="card-body text-danger">You are not allowed to access this page</h1>
        </div>
    </div>
}