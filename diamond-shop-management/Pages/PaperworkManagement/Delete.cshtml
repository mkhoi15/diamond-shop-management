@page "{PaperworkId}"
@model diamond_shop_management.Pages.PaperworkManagement.DeleteModel
@{
    ViewData["Title"] = "Delete Paperwork";
}

<section class="shop_section layout_padding">
    <div class="container">
        <h1 class="text-center">Delete Paperwork</h1>
        <h3 class="text-center text-danger">Are you sure you want to delete this paperwork?</h3>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group text-center">
                            @if (@Model.Paperwork != null && Model.Paperwork.Media != null)
                            {
                                <img src="~/@Model.Paperwork.Media.Url" alt="Diamond Image" width="30%">
                            }
                            else
                            {
                                <img src="" alt="No image" width="30%">
                            }
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Message))
                        {
                            <div class="alert alert-danger" id="message" role="alert">
                                @Model.Message
                            </div>
                        }
                        <div class="form-group">
                            <label asp-for="Paperwork.Type"></label>
                            <input asp-for="Paperwork.Type" class="form-control" readonly style="pointer-events:none" />
                            <span asp-validation-for="Paperwork.Type" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Paperwork.CreatedDate"></label>
                            <input asp-for="Paperwork.CreatedDate" class="form-control" readonly style="pointer-events:none" />
                            <span asp-validation-for="Paperwork.CreatedDate" class="text-danger"></span>
                        </div>
                        @if (@Model.Paperwork.Type != null && @Model.Paperwork.Type.Trim().ToLower() != "certificate")
                        {
                            <div class="form-group">
                                <label asp-for="Paperwork.ExpirationDate"></label>
                                <input asp-for="Paperwork.ExpirationDate" class="form-control" readonly style="pointer-events:none" />
                                <span asp-validation-for="Paperwork.ExpirationDate" class="text-danger"></span>
                            </div>
                        }
                        <input type="hidden" asp-for="Paperwork.Status" />
                        <div class="form-group">
                            <input type="hidden" asp-for="Paperwork.Id" />
                            <input type="hidden" asp-for="Paperwork.DiamondId" />
                            <input type="hidden" asp-for="Paperwork.IsDeleted" />
                            <input type="hidden" asp-for="Paperwork.MediaId" />
                            <a asp-page="/DiamondManagement/Update" asp-route-diamondId="@Model.Paperwork.DiamondId" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- end shop section -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}