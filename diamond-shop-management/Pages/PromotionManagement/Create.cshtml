@page
@model diamond_shop_management.Pages.PromotionManagement.CreateModel

@{
    ViewData["Title"] = "Create Promotion";
}

<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Create New Promotion
            </h2>
        </div>
        <div class="row">
            <form method="post">
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert alert-danger" id="message" role="alert">
                        @Model.Message
                    </div>
                }
                <div class="form-group">
                    <label asp-for="Promotion.Name" class="control-label">Promotion Name (%)</label>
                    <input asp-for="Promotion.Name" class="form-control" />
                    <span asp-validation-for="Promotion.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Promotion.StartDate" class="control-label"></label>
                    <input asp-for="Promotion.StartDate" class="form-control" type="date" />
                    <span asp-validation-for="Promotion.StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Promotion.EndDate" class="control-label"></label>
                    <input asp-for="Promotion.EndDate" class="form-control" type="date" />
                    <span asp-validation-for="Promotion.EndDate" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Promotion.IsDeleted" id="ActiveValue" value="false"/>
                <div class="form-group">
                    <a asp-page="/PromotionManagement/View" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const errorMessage = document.getElementById("message");
            if (errorMessage) {
                const message = errorMessage.textContent.trim();
                if (message !== "") {
                    setTimeout(function () {
                        const form = document.querySelector("form");
                        if (form) {
                            const inputs = form.querySelectorAll("input[type='text'], input[type='email'], input[type='number'], input[type='password'], input[type='date'], textarea");
                            inputs.forEach(function (input) {
                                input.value = "";
                            });
                        }
                    });
                    setTimeout(function () {
                        errorMessage.style.display = "none";
                        errorMessage.textContent = "";
                    }, 2000);

                } else {
                    setTimeout(function () {
                        errorMessage.style.display = "none";
                        errorMessage.textContent = "";
                    }, 1000);
                }
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
