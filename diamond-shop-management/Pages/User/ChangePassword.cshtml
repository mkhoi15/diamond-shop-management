@page
@model diamond_shop_management.Pages.User.ChangePassword

@{
    Layout = "Shared/_Layout";
    ViewBag.Title = "Forgot Password";
}

<div class="align-items-center w-auto h-100 p-5 m-5">
    <div class="row flex justify-content-center align-items-center">
        <div class="col-md-6 justify-content-center align-items-center">
            <form method="post">
                <h4>Change Password</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.Username"></label>
                    <input asp-for="@Model.Username" class="form-control" />
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.OldPassword"></label>
                    <input asp-for="@Model.OldPassword" class="form-control" />
                    <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.NewPassword"></label>
                    <input asp-for="@Model.NewPassword" class="form-control" />
                    <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.ConfirmPassword"></label>
                    <input asp-for="@Model.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Change Password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}