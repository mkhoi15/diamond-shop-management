@page
@model Login

@{
    ViewData["Title"] = "Login";
}
<div class="align-items-center w-auto h-100 p-5 m-5">
    <div class="row flex justify-content-center align-items-center">
        <div class="col-md-6 justify-content-center align-items-center">
            <form method="post">
                <h4>Đăng nhập</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LoginDto.Username"></label>
                    <input placeholder="Username or Email" asp-for="LoginDto.Username" class="form-control" />
                    <span asp-validation-for="LoginDto.Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="LoginDto.Password"></label>
                    <input type="password" asp-for="LoginDto.Password" class="form-control" />
                    <span asp-validation-for="LoginDto.Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Đăng nhập</button>
                <div>
                    <text>Quên mật khẩu ? </text>
                    <a asp-page="./ForgotPassword">Nhấn vào đây</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}